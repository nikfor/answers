<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $("#answer_body").before("<%= message %>")
  <% end %>
<% else %>
  $(".answers_read").append("<%= j render @answer %>");
  $(".create_answer_form textarea").val("");
  $(".alert").html("<%= flash[:notice] %>");
<% end %>
